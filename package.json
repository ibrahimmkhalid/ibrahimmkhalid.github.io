{
  "scripts": {
    "build": "npx tailwindcss -i ./tailwind.css -o ./styles.css",
    "build:watch": "npx tailwindcss -i ./tailwind.css -o ./styles.css --watch",
    "serve": "browser-sync start -s -f . --no-notify",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\""
  },
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4"
  }
}
